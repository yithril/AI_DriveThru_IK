# AI DriveThru Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/ai_drivethru

# Redis Cache URL
# Format: redis://host:port/db_number
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# OpenAI API Key (required for voice processing and AI features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional, for Claude models)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# TEXT-TO-SPEECH CONFIGURATION
# =============================================================================

# OpenAI TTS Voice (choose from: nova, alloy, echo, fable, onyx, shimmer)
TTS_VOICE=nova

# TTS Language
TTS_LANGUAGE=english

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================

# AWS Credentials (required for file uploads)
# Get these from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# AWS Region
AWS_REGION=us-east-1

# S3 Bucket Name (create this bucket in your AWS account)
S3_BUCKET=your-ai-drivethru-bucket

# Optional: Custom S3 Endpoint (for LocalStack, MinIO, etc.)
# Leave empty for AWS S3
AWS_ENDPOINT_URL=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Algorithm
ALGORITHM=HS256

# Access token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to false in production
DEBUG=true

# =============================================================================
# EXAMPLE VALUES FOR LOCAL DEVELOPMENT
# =============================================================================

# For local development with Docker:
# POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/ai_drivethru
# REDIS_URL=redis://redis:6379/0

# For local development without Docker:
# POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/ai_drivethru
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# For production, make sure to:
# 1. Set DEBUG=false
# 2. Use strong SECRET_KEY
# 3. Use production database URLs
# 4. Set up proper AWS credentials
# 5. Configure your S3 bucket with appropriate permissions

# Example production settings:
# DEBUG=false
# SECRET_KEY=your-production-secret-key-here
# POSTGRES_URL=postgresql://user:password@your-db-host:5432/ai_drivethru_prod
# REDIS_URL=redis://your-redis-host:6379/0
